{
    "name": "npdo",
    "version": "0.0.17",
    "description": "Database Abstraction Layer for Node js",
    "author": "Claudio Pennati <claudio.pennati@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Lupennat/npdo.git"
    },
    "main": "./dist/index.js",
    "types": "./dist/types.d.ts",
    "keywords": [
        "database",
        "abstraction",
        "layer",
        "pdo",
        "mysql",
        "mariadb",
        "sqlite",
        "sqlite3"
    ],
    "exports": {
        ".": "./dist/index.js",
        "./error": "./dist/npdo-error.js",
        "./types": "./dist/types.d.ts"
    },
    "files": [
        "dist/*"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "prepublishOnly": "safe-publish-latest && npm run lint && npm run test && npm run build",
        "prepublish": "not-in-publish || npm run prepublishOnly",
        "clean": "del-cli dist",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "compile": "npm run clean && tsc",
        "build": "npm run compile",
        "watch": "tsc -w",
        "docker:up": "docker compose -f docker-compose.yml up -d",
        "db:migration": "ts-node db/migration.ts",
        "docker:down": "docker compose -f docker-compose.yml stop",
        "test": "npm run docker:up && npm run db:migration && jest && npm run docker:down",
        "test:coverage": "npm run docker:up && npm run db:migration && jest --coverage && npm run docker:down",
        "test:watch": "jest --coverage --watch"
    },
    "engines": {
        "node": "^14.19.0 || ^16.10.0 || >=18.0.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.6.0",
        "@tsconfig/node16": "^1.0.3",
        "@types/jest": "^29.1.2",
        "@types/lodash.shuffle": "^4.2.7",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "del-cli": "^5.0.0",
        "esbuild-runner": "^2.2.2",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard-with-typescript": "^23.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.3.0",
        "eslint-plugin-promise": "^6.0.1",
        "jest": "^29.1.2",
        "safe-publish-latest": "^2.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "@types/better-sqlite3": "^7.6.2",
        "@types/node": "^16.18.0",
        "@types/uuid": "^8.3.4",
        "better-sqlite3": "^7.6.2",
        "lodash.shuffle": "^4.2.0",
        "mysql2": "github:sidorares/node-mysql2#master",
        "tarn": "^3.0.2",
        "uuid": "^9.0.0"
    }
}
